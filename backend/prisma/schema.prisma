generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) 
  email     String   @unique             
  name      String
  password  String                  
  messages  Message[]              
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(cuid())
  content   String
  role      String  
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  userId    String
}