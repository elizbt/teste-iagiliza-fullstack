{
  "compilerOptions": {
  
    "target": "ES2022",               
    "module": "NodeNext",             
    "moduleResolution": "NodeNext",     

    "strict": true,                 
    "skipLibCheck": true,             
    "forceConsistentCasingInFileNames": true,

   
    "esModuleInterop": true,          
    "allowSyntheticDefaultImports": true,

    "rootDir": "src",                 
    "outDir": "dist"              
  },
  "include": ["src"],                 
  "exclude": ["node_modules"]         
}